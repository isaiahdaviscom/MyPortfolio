{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react", // Add this if you're using React
    "strict": true, // Enabling strict mode will enable a lot of useful type checking options in TypeScript.
    "forceConsistentCasingInFileNames": true, // Adding the setting here will ensure that all imports from files are case-sensitive.
    "noUnusedLocals": true, // This setting will ensure that you don't have any unused variables in your code.
    "noUnusedParameters": true, // This setting will ensure that you don't have any unused parameters in your code.
    "noFallthroughCasesInSwitch": true, // This setting will ensure that you don't have any fallthrough cases in your switch statements.
    "resolveJsonModule": true, // This setting will allow you to import JSON files into your TypeScript files.
    "isolatedModules": true, // This setting will ensure that each file can be safely transpiled without relying on other imports.
    "target": "ES2020", // This setting will ensure that your code is transpiled to the latest version of JavaScript.
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true
  },
  "include": [
    "vite.config.ts"
  ]
}